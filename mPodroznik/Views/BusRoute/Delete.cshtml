@model mPodroznik.ViewModel.BusStopViewModel
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div>
    <h2>Usunięcie przystanku</h2>
    @using (Html.BeginForm("Delete", "BusRoute", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Przystanek Autobusowy</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2">Linia nr:</label>
                <label class="col-md-10">@Model.BusID</label>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Numer przystanku:</label>
                <label class="col-md-10">@Model.BusStopOrder</label>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Nazwa przystanku:</label>
                <label class="col-md-10">@Model.BusStopName</label>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Szerokosc geofraficzna:</label>
                <label class="col-md-10" >@Model.GPSLat</label>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Dlugosc geograficzna:</label>
                <label class="col-md-10">@Model.GPSLong</label>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Usuń" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>
<div>
    @Html.ActionLink("Powrot do Listy", "ShowRouteTable")
</div>


